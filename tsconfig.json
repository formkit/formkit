{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": ["ES2021", "dom"],
    "allowJs": false,
    "strict": true,
    "moduleResolution": "bundler",
    "declaration": false,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "types": ["node", "vite/client", "./types/global.d.ts"]
  },
  "exclude": ["*.vue", "temp/formkit.theme.ts"]
}
